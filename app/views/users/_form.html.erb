<%= form_with(model: user) do |form| %>

  <div>
    <%= form.label :email, 'Adresse mail :', style: "display: block" %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :password, 'Mot de passe :', style: "display: block" %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.label :password_confirmation, 'Confirmation :', style: "display: block" %>
    <%= form.password_field :password_confirmation %>
  </div>
  <div>
    <%= form.submit "Valider" %>
  </div>
<% end %>